{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "JSSON",
  "scopeName": "source.jsson",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jsson",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jsson",
          "match": "\\b(include|template|step)\\b"
        },
        {
          "name": "keyword.other.jsson",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jsson",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jsson",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.jsson",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.jsson",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.jsson",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.range.jsson",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.assignment.jsson",
          "match": "[:=]"
        },
        {
          "name": "keyword.operator.map.jsson",
          "match": "\\bmap\\b"
        },
        {
          "name": "keyword.operator.arithmetic.jsson",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.member.jsson",
          "match": "\\."
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.jsson",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.jsson",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.jsson",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.jsson",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.jsson",
          "match": "[,]"
        }
      ]
    }
  }
}
